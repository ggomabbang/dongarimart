generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clublist {            // 모집 중일 때 post와 1:1관계 추가 필요, PostId
  id            Int         @id @default(autoincrement())
  clubName      String      @unique
  department    String
  oneLine       String
  short         String
  isRecruiting  Boolean     @default(false)
  recruitPeriod String?     // Start, End 두 개로 나누어야할 필요 있음, DateTime
  recruitTarget String?     // JSON
  pageURL       String?
  image         String?
  tags          clubtag[]
  members       JoinedClub[]
}

model clubtag {
  clubId        Int
  tagId         Int
  assignedAt    DateTime    @default(now())
  club          clublist    @relation(fields: [clubId], references: [id])
  tag           taglist     @relation(fields: [tagId], references: [id])

  @@id([clubId, tagId])
}

